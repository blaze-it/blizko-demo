{
	"name": "blizko",
	"private": true,
	"type": "module",
	"version": "0.1.0",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "pnpm --parallel --filter @blizko/server --filter @blizko/client dev",
		"dev:server": "pnpm --filter @blizko/server dev",
		"dev:client": "pnpm --filter @blizko/client dev",
		"build": "pnpm -r build",
		"build:server": "pnpm --filter @blizko/server build",
		"build:client": "pnpm --filter @blizko/client build",
		"start": "pnpm --filter @blizko/server start",
		"format": "biome format --write .",
		"lint": "biome lint --write --unsafe .",
		"check": "biome check --write --unsafe .",
		"typecheck": "pnpm -r typecheck",
		"db:generate": "pnpm --filter @blizko/server db:generate",
		"db:push": "pnpm --filter @blizko/server db:push",
		"db:migrate": "pnpm --filter @blizko/server db:migrate",
		"db:studio": "pnpm --filter @blizko/server db:studio",
		"test:e2e": "pnpm --filter @blizko/e2e test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": "22"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@prisma/engines",
			"prisma",
			"esbuild"
		],
		"overrides": {
			"react": "18.3.1",
			"react-dom": "18.3.1",
			"@types/react": "~18.3.0",
			"@types/react-dom": "~18.3.0"
		}
	}
}
